<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Acti_ViewNews">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9sp">
        <ImageView
            android:id="@+id/item_comment_ImageView"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="9sp"
            android:src="@drawable/profile" />
        <TextView
            android:id="@+id/Acti_ViewNews_nameAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_comment_ImageView"
            android:textStyle="bold"
            android:text="@string/Administrators"
            android:textColor="#575757"
            android:textSize="18sp"
            android:padding="9sp"/>
        <TextView
            android:id="@+id/Acti_ViewNews_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Acti_ViewNews_nameAdmin"
            android:layout_toRightOf="@+id/item_comment_ImageView"
            android:textColor="#656668"
            android:textSize="12sp"
            android:paddingStart="9sp"
            android:text="28/10/2000"/>

        <View
            android:id="@+id/Acti_ViewNews_view"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/Acti_ViewNews_date"
            android:background="#ededed"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12sp"/>

        <TextView
            android:id="@+id/Acti_ViewNews_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Acti_ViewNews_view"
            android:textStyle="bold"
            android:text="abc"
            android:textColor="#575757"
            android:textSize="18sp"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/Acti_ViewNews_ImageSlider"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="12sp"
            android:layout_below="@+id/Acti_ViewNews_title"
            app:iss_auto_cycle="true"
            app:iss_period="1500"
            android:scaleType="centerCrop"
            app:iss_delay="10"
            app:iss_title_background="@null"
            android:src="@drawable/sky_am"/>

        <TextView
            android:id="@+id/Acti_ViewNews_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Acti_ViewNews_ImageSlider"
            android:text="message"
            android:textColor="#575757"
            android:textSize="15sp"
            android:padding="9sp"/>

    </RelativeLayout>
</ScrollView>